<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login | SteamPress | #(site.title)</title>
    <link rel="stylesheet" href="/static/css/admin.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/iankoex/sp-assets@main/custom.min.css">
</head>

<body>
    <div class="gh-app">
        #extend("blog/admin/adminErrors")
        <div class="gh-viewport">
            <main class="gh-main ">
                <div class="gh-flow">
                    <div class="gh-flow-content-wrap">
                        <section class="gh-flow-content">
                            <form action="/steampress/resetPassword/" method="post" class="gh-signin"
                                novalidate="novalidate">
                                <header>
                                    <div class="gh-site-icon" style="background-image: url('#(site.logo)')"></div>
                                    <h1>Reset Password</h1>
                                </header>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <span class="gh-input-icon gh-icon-lock forgotten-wrap">
                                        <input id="password" class="gh-input password" placeholder="•••••••••••••••"
                                            name="password" autocomplete="current-password" autocorrect="off"
                                            type="password">
                                        <a href="" class="forgotten-link gh-btn gh-btn-link gh-btn-icon" type="button">
                                            <span>Forgot?</span>
                                        </a>
                                    </span>

                                </div>

                                <div class="form-group">
                                    <label for="confirmPassword">confirmPassword</label>
                                    <span class="gh-input-icon gh-icon-lock forgotten-wrap">
                                        <input id="confirmPassword" class="gh-input password"
                                            placeholder="•••••••••••••••" name="confirmPassword"
                                            autocomplete="current-password" autocorrect="off" type="password">
                                    </span>

                                </div>

                                <button style="background: #f7931e;"
                                    class="login gh-btn gh-btn-login gh-btn-block gh-btn-icon" type="submit">
                                    <span>Reset →</span>
                                </button>

                            </form>
                        </section>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="/static/js/admin/admin.js"></script>

</body>

</html>